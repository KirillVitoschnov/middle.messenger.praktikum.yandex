{{> Header }}
<main>

<div class="login-container">
    <h2>Регистрация</h2>
    {{#if errorMessage}}
        <p class="error-message">{{errorMessage}}</p>
    {{/if}}
    <form class="login-form" action="/register" method="POST">
        {{> Input type="text" id="first_name" name="first_name" label="Имя" required=true}}
        {{> Input type="text" id="second_name" name="second_name" label="Фамилия" required=true}}
        {{> Input type="text" id="login" name="login" label="Логин" required=true}}
        {{> Input type="email" id="email" name="email" label="Email" required=true}}
        {{> Input type="password" id="password" name="password" label="Пароль" required=true}}
        {{> Input type="tel" id="phone" name="phone" label="Телефон" required=true}}
        <button type="submit" class="login-button">Зарегистрироваться</button>
    </form>
</div>
</main>

{{> BlockLinks }}
