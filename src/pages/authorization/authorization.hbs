{{> Header }}
<main>
<div class="login-container">
     {{#if errorMessage}}
        <div class="notification">{{errorMessage}}</div>
        {{/if}}
    <h2>Вход</h2>
    <form class="login-form" action="/login" method="POST">
        {{> Input type="text" id="username" name="username" label="Логин" required=true}}
        {{> Input type="password" id="password" name="password" label="Пароль" required=true}}
        <button type="submit" class="login-button">Авторизоваться</button>
        <a href="#" class="register-link">Нет аккаунта?</a>
    </form>
</div>
</main>
{{{blockLinks}}}
